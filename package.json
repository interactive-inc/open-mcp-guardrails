{
  "name": "@interactive-inc/open-mcp-guardrails",
  "version": "0.1.1",
  "description": "Policy-based guardrails proxy for MCP servers",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "open-mcp-guardrails": "./dist/cli/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown && cp lib/guardrails.schema.json dist/guardrails.schema.json",
    "dev": "tsdown --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome check lib/",
    "lint:fix": "biome check --write lib/",
    "format": "biome format --write lib/",
    "typecheck": "tsc --noEmit",
    "e2e": "bun examples/e2e-test.ts",
    "prepublishOnly": "bun run build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "guardrails",
    "proxy",
    "security",
    "pii",
    "prompt-injection",
    "llm",
    "claude",
    "policy"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=23.6.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@types/bun": "^1.2.0",
    "@types/node": "^25.2.3",
    "mermaid": "^11.12.2",
    "tsdown": "^0.20.3",
    "typescript": "^5.5.0",
    "vitepress": "^1.6.4",
    "vitepress-plugin-mermaid": "^2.0.17"
  },
  "homepage": "https://interactive-inc.github.io/open-mcp-guardrails",
  "repository": {
    "type": "git",
    "url": "https://github.com/interactive-inc/open-mcp-guardrails.git"
  }
}
